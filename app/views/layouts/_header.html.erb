<div class="container">
  <div class="row">

    <div class="col">
      <%= link_to "DragonCaveClone", root_path, class: "h3" %>
    </div>

    <div class="col">
      <div class="float-right">
        <div class="row ">
          <% if account_signed_in? %>
            <%= link_to "Sign out", destroy_account_session_path, method: :delete %>
          <% else %>
            <%= link_to "Log in", new_account_session_path, class: "pr-2" %>
            <%= link_to "Sign up", new_account_registration_path %>
          <% end %>
        </div>
        <div class="row pt-2">
          <%= link_to "Cave", root_path, class: "pr-2" %>
          <% if account_signed_in? %>
            <%= link_to "Account", edit_account_registration_path, class: "pr-2" %>
            <%= link_to "Dragons", "#", class: "pr-2" %>
            <%= link_to "Trading", "#", class: "pr-2" %>
          <% end %>
          <%= link_to "Help", "#", class: "pr-2" %>
          <%= link_to "Forum", "#" %>
        </div>
      </div>
    </div>

  </div>
</div>
